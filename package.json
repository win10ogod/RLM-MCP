{
  "name": "rlm-mcp-server",
  "version": "2.4.0",
  "description": "Recursive Language Model (RLM) MCP Server - Enable any LLM to process arbitrarily long contexts through recursive decomposition",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "serve": "npm run build && node dist/index.js --serve",
    "all": "npm run build && node dist/index.js --all",
    "dev": "tsx src/index.ts",
    "dev:serve": "tsx src/index.ts --serve",
    "dev:all": "tsx src/index.ts --all",
    "inspect": "npx @modelcontextprotocol/inspector node dist/index.js",
    "test": "node scripts/run-tests.mjs"
  },
  "keywords": [
    "mcp",
    "llm",
    "recursive-language-model",
    "rlm",
    "long-context",
    "ai",
    "context-management"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.0",
    "express": "^4.21.0",
    "jose": "^5.2.0",
    "tiktoken": "^1.0.22",
    "vm2": "^3.9.19",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^22.10.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
